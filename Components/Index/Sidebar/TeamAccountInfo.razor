@using System.Security.Claims

<AuthorizeView>
    <div class="w-full border-b border-gray-200 border-opacity-25 p-4">
        <div class="flex w-full justify-between">
            <div>
                <h2 class="font-sans text-2xl font-bold text-white">SOFTWARE HOUSE</h2>
            </div>
            <div class="w-[30px] h-[30px] flex cursor-pointer items-center justify-center rounded-full bg-white p-2">
                <iconify-icon class="text-slack_bg" icon="bx:edit" width="20" height="20"></iconify-icon>
            </div>
        </div>
        <div class="flex w-full items-center gap-1">
            <span class="w-[5px] h-[5px] mt-0.5 rounded-full border bg-green-700 p-1"></span>
            <p class="text-white">@context.User.Claims.Where(claim => claim.Type == ClaimTypes.Name).FirstOrDefault().Value</p>
        </div>
    </div>
</AuthorizeView>
