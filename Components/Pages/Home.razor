@page "/"

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <NavMenu ImageUrl="@context.User.Claims.Where(user => user.Type == "picture").FirstOrDefault().Value"/>
        <div class="flex h-screen w-full">
            <Sidebar />
            <ChatContainer />
        </div>
    </Authorized>
    <NotAuthorized>
        <Login />
    </NotAuthorized>
</AuthorizeView>


